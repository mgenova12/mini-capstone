

<h1>Here you can edit your cars! </h1>

<%= form_tag "/products/#{@product.id}", method: :patch do %>

<div class="input-group">
  <span class="input-group-addon" id="basic-addon1">Title: </span>
  <input type="text" class="form-control" name="form_title" value="<%= @product.title %>" aria-describedby="basic-addon1">
</div>

<div class="input-group">
  <span class="input-group-addon" id="basic-addon1">Price: </span>
  <input type="text" class="form-control" name="form_price" value="<%= @product.price %>" aria-describedby="basic-addon1">
</div>


<div class="input-group">
  <span class="input-group-addon" id="basic-addon1">Description</span>
  <input type="text" class="form-control" name="form_description" value="<%= @product.description %>"  aria-describedby="basic-addon1">
</div>

  <button type="submit" class="btn btn-default">EDIT</button>

<% end  %>


<%= form_tag "/products/#{@product.id}", method: :delete do %>
    
  <button type="submit" class="btn btn-default">DELETE</button>

<%end  %>





